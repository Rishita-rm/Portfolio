{
  "compilerOptions": {
    "target": "ES2020",
      "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    // Bundler mode
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Allow JS/JSX modules:
    "allowJs": true,
    "checkJs": false,

    // Strictness (you can keep strict true, but unused checks will fail the CI build)
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    // Helpful for Vite env types:
    "types": ["vite/client"]
  },
  "include": ["src"]
}
